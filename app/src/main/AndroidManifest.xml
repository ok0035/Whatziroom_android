<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.heronation.whatziroom">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activity.base.BaseActivity" />
        <activity android:name=".activity.base.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activity.LoginActivity" />
        <activity android:name=".activity.SignUpActivity" />
        <activity
            android:name=".activity.main.MainViewPager"
            android:windowSoftInputMode="adjustPan" />
        <activity android:name=".activity.RoomListActivity" />
        <activity android:name=".activity.room.RoomViewPager" />
        <activity android:name=".activity.room.RoomSettingActivity"/>
        <activity android:name=".activity.room.RoomAddSchedule"/>

        <activity android:name=".activity.ProfilUpdateActivity" />
        <activity android:name=".activity.ProfilUserSettingActivity"/>
    </application>

</manifest>