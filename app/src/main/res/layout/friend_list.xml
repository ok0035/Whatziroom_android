<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="20dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/back_search">

            <EditText
                android:id="@+id/findFreindEdt"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.9"
                android:hint="이름으로 친구 찾기"
                android:layout_marginLeft="15dp"
                android:textSize="15dp"
                android:background="@null"/>

            <ImageView
                android:id="@+id/searchFreindBtn"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.1"
                android:layout_margin="5dp"
                android:paddingRight="5dp"
                android:src="@mipmap/search"
                android:gravity="center"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="50dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_margin="5dp"
                android:background="@drawable/round_background_main"
                android:gravity="center"
                android:textColor="#FFFFFF"
                android:textSize="15dp"
                android:textStyle="bold"
                android:id="@+id/tvFriendSearchBack"
                android:text="친구 검색 결과입니다."
                android:visibility="gone"/>

            <ListView
                android:id="@+id/friendList"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            </ListView>

        </LinearLayout>

    </FrameLayout>

</LinearLayout>