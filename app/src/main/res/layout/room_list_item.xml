<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:orientation="horizontal"
    android:padding="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/roomListThumbImg"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@mipmap/group1_icon" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            android:weightSum="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="5dp"
                android:layout_weight="0.5"
                android:weightSum="1"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/roomNameTxt"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:text="모임 제목"
                    android:layout_weight="0.6"
                    android:gravity="center_vertical"
                    android:textColor="#000000"
                    android:textSize="16dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/roomFounderLabel"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="개설자 : "
                    android:layout_weight="0.15"
                    android:gravity="center"
                    android:textColor="#000000"
                    android:textSize="10dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/roomFounder"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="데이터 없음"
                    android:layout_weight="0.25"
                    android:gravity="center_vertical"
                    android:textColor="#000000"
                    android:textSize="10dp"
                    android:textStyle="bold" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginLeft="10dp"
                android:layout_weight="0.5"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:weightSum="1">

                <TextView
                    android:id="@+id/roomTimeTxt"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.8"
                    android:text="설명"
                    android:textColor="#7f7f7f"
                    android:singleLine="true"
                    android:textSize="14dp" />

            </LinearLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/roomOutTxt"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="right|center"
            android:layout_marginRight="10dp"
            android:background="@drawable/button_border_fill"
            android:gravity="center"
            android:text="나가기"
            android:visibility="gone" />
    </LinearLayout>

    <TextView
        android:id="@+id/tvChatCount"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/round_background_button"
        android:layout_gravity="bottom|right"
        android:gravity="center"
        android:padding="3dp"
        android:text=""
        android:textColor="#FFFFFF"
        android:textSize="17dp"
        android:textStyle="bold" />

</FrameLayout>