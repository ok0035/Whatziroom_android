<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:orientation="horizontal"
    android:padding="10dp">

    <ImageView
        android:id="@+id/roomListThumbImg"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@mipmap/room_icon"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:weightSum="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginLeft="10dp"
            android:layout_weight="0.5"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:gravity="center_vertical">

                <TextView
                    android:id="@+id/roomNameTxt"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="모임 제목"
                    android:textSize="17dp"
                    android:textStyle="bold"
                    android:textColor="#000000"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.5"
            android:orientation="horizontal"
            android:weightSum="1"
            android:layout_marginLeft="10dp"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/roomTimeTxt"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.8"
                android:textSize="15dp"
                android:text="설명"
                android:textColor="@color/indicatorColor" />

        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/roomOutTxt"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="right|center"
        android:layout_marginRight="10dp"
        android:background="@drawable/button_border_fill"
        android:gravity="center"
        android:text="나가기"
        android:visibility="gone" />

</LinearLayout>